{
  "name": "redux-simple-storage-middleware",
  "version": "2.2.1",
  "description": "Simple redux middleware which will store the current state tree in either session- or localstorage",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "npm run lint && npm run flow && npm run build",
    "build": "babel ./src -d ./lib --ignore '.spec'",
    "lint": "eslint src/**/*.js",
    "flow": "flow check",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "docs": "documentation readme ./src/index.js --section 'Reference'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BartWaardenburg/redux-simple-storage-middleware.git"
  },
  "keywords": [
    "redux",
    "middleware",
    "localstorage",
    "sessionstorage",
    "initial",
    "state",
    "storage",
    "redux-middleware"
  ],
  "author": "Bart Waardenburg <bartwaardenburg@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BartWaardenburg/redux-simple-storage-middleware/issues"
  },
  "homepage": "https://github.com/BartWaardenburg/redux-simple-storage-middleware#readme",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.9.0",
    "documentation": "^4.0.0-beta5",
    "eslint": "^4.2.0",
    "eslint-plugin-flowtype": "^2.2.7",
    "eslint-plugin-jest": "^20.0.3",
    "flow-bin": "^0.49.1"
  },
  "dependencies": {
    "lodash.omit": "^4.5.0"
  }
}
